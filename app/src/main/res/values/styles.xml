<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <color name="colorPrimary">#6200EE</color>
    <color name="colorPrimaryDark">#3700B3</color>
    <color name="colorAccent">#03DAC5</color>

    <color name="navMenuItemColor">#000000</color> <!-- Цвет текста меню -->
    <color name="navMenuBackgroundColor">#FFFFFF</color> <!-- Цвет фона меню -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#F0F0F0</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>



    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay</item> <!-- Добавьте это для радиуса -->
    </style>

    <style name="ShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100dp</item> <!-- Укажите нужный радиус -->
    </style>


    <style name="AppEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColorHint">#999999</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/navMenuBackgroundColor</item>
        <item name="itemTextColor">@color/navMenuItemColor</item>
    </style>
</resources>